extends template/main

block variables
    - var title = 'Наши салоны';
    - var headerGrayBackground = true;

block content
    section.salons
        .container
            .row
                .col-16
                    include modules/breadcrumbs
                    h1.salons__title Наши салоны

        .salons__item
            .container
                .row
                    .col-xl-10.col-lg-9
                        img(srcset='static/images/content/salons/olysheva.jpg', alt='').salons__img
                    .offset-xl-1.col-xl-4.offset-lg-1.col-lg-6
                        a(href='#').salons__address.salons__address--top ул. Олешева, 1
                        .salons__block
                            p.salons__time с 10 до 20, в вс до 18
                            .salons__links
                                a(href='tel:+375291384931').salons__link +375 29 138-49-31
                                a(href='tel:+375291384963').salons__link +375 29 138-49-63
                        .salons__parking схема проезда и парковок
                        .salons__mini-wrap.salons__mini-wrap--top
                            .salons__mini
                                span.salons__mini-number 22
                                span.salons__mini-text образца межкомнатных

                            .salons__mini
                                span.salons__mini-number 32
                                span.salons__mini-text образца входных дверей в салоне

        .salons__items
            .salons__item
                .container
                    .row
                        .col-xl-5.col-lg-7.salons__wrap
