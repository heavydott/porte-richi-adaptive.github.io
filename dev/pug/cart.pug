extends template/main

block variables
    - var title = 'Главная страница';
    - var headerGrayBackground = true;

block content
    .container
        .row
            .breadcrumbs
                include ./modules/breadcrumbs
            h1.cart__title Мой заказ
            section.cart#cart
                .cart-table
                    .cart-table__header
                        .cart-table__header-product Товар
                        .cart-table__header-cost Цена
                        .cart-table__header-quantity Количество
                        .cart-table__header-sum Сумма

                    .cart-table__body
                        // item
                        .cart-table__row
                            .cart-table__item
                                .cart-table__item-img
                                    img(src='static/images/content/cart/cart-item-1.jpg', alt='')
                                a(href="#").cart-table__item-title.base-fz-20 Межкомнатная дверь ЛН31
                                .cart-table__item-descr.base-fz-18 Строганный шпон, Американский орех, тонированный, матовый
                                .cart-table__item-favorite В избранное
                                .cart-table__item-delete Удалить
                            .cart-table__cost.base-fz-20
                                .cart-table__cost-old 722 руб.
                                .cart-table__cost-actual 613 руб.
                            .cart-table__quantity
                                .cart-table__quantity-minus
                                .cart-table__quantity-number 99
                                .cart-table__quantity-plus
                            .cart-table__sum 3 613 руб.

                        // item
                        .cart-table__row
                            .cart-table__item.active-field
                                .cart-table__item-img
                                    img(src='static/images/content/cart/cart-item-2.jpg', alt='')
                                a(href="#").cart-table__item-title.base-fz-20 Межкомнатная дверь АВ123-В2
                                .cart-table__item-descr.base-fz-18 Строганный шпон, Американский орех, тонированный, матовый
                                .cart-table__item-favorite В избранное
                                .cart-table__item-delete Удалить
                            .cart-table__cost.base-fz-20
                                .cart-table__cost-old
                                .cart-table__cost-actual 613 руб.
                            .cart-table__quantity
                                .cart-table__quantity-minus
                                .cart-table__quantity-number 2
                                .cart-table__quantity-plus
                            .cart-table__sum 613руб.

                .cart-checkout
                    .cart-checkout__table
                        .cart-checkout__row
                            h2.cart-checkout__name.cart-checkout__name--big Итого
                            h2.cart-checkout__number.cart-checkout__number--big 5 545 руб.
                        .cart-checkout__row
                            span.cart-checkout__name.cart-checkout__name-counter.base-fz-20  Товары,
                                .cart-checkout__name-total.base-fz-20  7шт
                            span.cart-checkout__number.base-fz-20  5 545 руб.
                        .cart-checkout__row.cart-checkout__row--red
                            span.cart-checkout__name.base-fz-20  Скидка
                            span.cart-checkout__number.base-fz-20 - 300 руб.
                        .cart-checkout__row.cart-checkout__row--red
                            span.cart-checkout__name.base-fz-20  Промокод
                            span.cart-checkout__number.base-fz-20 - 23 руб.
                    a(href="#").cart-checkout__submit оформить
                    include ./modules/terms
            // Promo
            .cart__promo
                include ./modules/promo
            .cart__form
                include ./modules/form-data














block script
    script(src="static/js/pages/cart/cart.js", defer)
    script(src="static/js/components/form-data.js", defer)

